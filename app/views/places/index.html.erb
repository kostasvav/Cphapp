<div id="place-list">

<table>
<% for place in @places %>
<tr>
<td>
<h1><%=h place.name %></h1>
</td></tr>
<tr>
<td>
<%= image_tag place.image, :class => 'list-image' %>
</td>
<td>
<table style="width:100%">
<tr>
<td>
<%= image_tag place.image, :class => 'list-thumbimage' %>
<%= image_tag place.image, :class => 'list-thumbimage' %>
<%= image_tag place.image, :class => 'list-thumbimage' %><br/><br/>
</td></tr>
<tr>
<td>
<b>Business Type:</b>
<span style="text-transform: capitalize"><%=h place.business_type %></span><br/><br/>
<b>Category:</b>
<span style="text-transform: capitalize"><%=h place.category %></span><br/><br/>
<b>Address:</b>
<span style="text-transform: capitalize"><%=h place.location %></span><br/><br/>
<b>Price Category:</b>
<span style="text-transform: capitalize"><%=h place.price_cat %></span>
</td></tr>
</table>
</td>
</tr>
<tr>
<td style="width:640px; padding-top: 30px; padding-left: 5px">
<div style="border: .1em; border-color: white; border-style: groove; border-width: 4px; padding: 5px">
<span style="font-weight: bold; font-size: 1.5em; color: #555">Overview</span><br/><br/>
<span style="text-transform: capitalize"><%=h place.description %></span><br/></div><br/><br/>
<div style="border: .1em; border-color: white; border-style: groove; border-width: 4px; padding: 5px">
<span style="font-weight: bold; font-size: 1.5em; color: #555">Open Hours</span><br/><br/>
<span style="text-transform: capitalize"><%=h place.open_hours %></span><br/></div>
</td>
<td style="padding-top: 30px; padding-left: 20px;">
<b>Contact Info:</b><br/><br/>
<b>Website:</b>
<%= link_to "#{place.web_url}", "#{place.web_url}" %><br/><br/>
<b>Email:</b>
<%= mail_to "#{place.email_url}", "#{place.email_url}" %><br/><br/>
<b>Phone:</b>
<%=h place.phone_num %><br/><br/>
<%= gmaps( :map_options => { :container_class => "map_container_renamed" }, "markers" => {"data" => @json, "options" => {"auto_zoom" => false} }) %>
</td></tr>

<% end %>
</table><br/><br/>

</div>

<div class="cph_pagination">
<%= will_paginate @places, :container=> false %>
</div>
<br/>


<div style="text-align: center">

<%= link_to 'Edit', edit_place_path(place) %>
<%= link_to 'Destroy', place,
:confirm => 'Are you sure?',
:method => :delete %>
<%= link_to 'New Place', new_place_path %></div>
